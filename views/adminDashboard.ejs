<% layout("/layouts/adminPanel") %>

<div
  class="mt-lg-5 d-flex flex-column align-items-center row mx-md-5 p-lg-0 p-4 g-0"
>
  <% for(food of foodList){ %>
  <div class="card admin-card mt-3 mb-3 p-lg-2 col-lg-8">
    <div class="row g-0 d-flex align-items-center">
      <div class="col-lg-2 mx-3 col-3">
        <img
          src="<%= food.image.url %>"
          class="img-fluid rounded-start admin-img"
          alt="..."
        />
      </div>
      <div class="col-lg-9 me-auto col-7">
        <div class="card-body">
          <h5 class="card-title"><%= food.title %></h5>
          <p class="card-text"><%= food.description %></p>
          <p class="card-text">Rs. <%= food.price %></p>
          <p class="card-text">
            <small class="text-muted">Category : <%= food.category %></small>
          </p>
          <a href="/admin/edit/<%=food._id %>" class="btn btn-secondary"
            >Edit</a
          >

          <form
            action="/admin/delete/<%=food._id%>?_method=DELETE"
            style="display: inline"
            method="post"
          >
            <button class="btn btn-secondary">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
