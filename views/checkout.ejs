<% layout("/layouts/boilerplate") %>
<div class="row-5">
  <form
    action="/order/ordersuccess"
    method="post"
    class="m-5 needs-validation"
    novalidate
  >
    <h4 class="col-lg-6">Cart Total : Rs. <%= totalAmount %>.00</h4>
    <div class="mb-3 col-lg-5">
      <label for="name" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        name="name"
        id="name"
        placeholder="eg. Ram"
        required
        value="<%=user.username  %>"
      />
      <div class="invalid-feedback">Please enter a valid username.</div>
    </div>
    <div class="mb-3 col-lg-5">
      <label for="address" class="form-label" name="address">Address</label>
      <input
        type="text"
        class="form-control"
        id="address"
        placeholder="eg. Hno.45 near City palace , Jaipur"
        ,
        name="address"
        required
        value="<%=user.address[0]%>"
      />
      <div class="invalid-feedback">Please enter a valid address.</div>
    </div>
    <button class="btn btn-success">Order</button>
  </form>
</div>
