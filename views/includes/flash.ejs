<div class="row g-0">
  <% if (success && success.length){ %>
  <div
    class="alert alert-success alert-dismissible fade show col-lg-8 col-md-8 col-11 mt-3"
    role="alert"
  >
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %> <% if (error && error.length){ %>
  <div
    class="alert alert-danger alert-dismissible fade show col-lg-8 col-md-8 col-11 mt-3"
    role="alert"
  >
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
</div>
