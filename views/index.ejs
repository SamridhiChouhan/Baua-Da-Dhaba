<% layout("/layouts/boilerplate") %>
<style>
  @media (max-width: 850px) {
      .menu-section{
        margin: 3rem 0rem !important;
      }
      .menu-section h3{
        padding-left: 0;
        padding-left: 3rem;
      }
      .contact-element{
        /* right: 1rem; */
        /* width: 15rem; */
        /* scale: 0.8; */
        /* position: absolute; */
      }
    }
  @media (max-width: 650px) {
    .about-text{
      padding: 8rem 2rem;
    }
    .hero-info{
      padding-left: 0;
    }
    .hero-img{
      scale: 0.9 ;
    }
    
  }
  @media (max-width: 650px) {
    .contact-element{
        right: 0rem;
        height: 8rem;
