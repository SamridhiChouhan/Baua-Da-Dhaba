  @media (max-width: 480px) {
    .hero-sec{
      flex-direction: column;
      background-color: #f9f7f8;
      padding: 0;
     }
    .hero-info{
      background-image: url("/Dhaba bg(1).png");
      background-size: cover;
      width: 100%;
      height: 20rem;
      align-items: center;
      padding: 2rem;
      padding-top: 8rem;
    }
    .hero-img{
       scale:0.7;
       background-size: cover;
       width: 100%;
     }
    .h-img-big{
       top: -2rem;
    }
    .h-img-small{
       bottom: 15rem;
    }
    .hero-sec div{
       width: 100%;
    }

    .about-text{
       height: 40rem;
     }
     .contact-element{
        /* right: 0rem; */
        /* scale: 0.8; */
        display: none;
        
    }
  }
</style>

<div class="hero-sec">
  <div class="hero-info">
    <h3>Take a taste <br> Come join Us</h3>
    <h5>Life is so endlessly delicious.</h5>
    <p>Freshly made, homestyle food that brings back memories of ghar ka khana.
From spicy curries to buttery rotis, every dish at Baua Da Dhabaa is cooked with love and served with a smile. <br>
Explore our most-loved dishes below and add your favorites to the cart!</p>
    <a class="btn btn-secondary btn-hero" href="/menu">Explore Now</a>
  </div>
  <div class="hero-img">
    <div class="h-img-big"></div>
    <div class="h-img-small"></div>
  </div>
</div>


<div class="about-sec">
  <div class="about-text">
        <h4 class="mb-5">Made with Love & Spice</h4>
        <h5 class="mb-3">Where every bite feels like home!</h5>
        <p >At Baua Da Dhabaa, we blend the nostalgia of roadside dhaba flavors with the ease of modern food delivery. From sizzling curries to buttery naan, every dish is cooked with desi love and a dash of spice that keeps you coming back for more.</p>
        <a href="/about" class="mt-3 btn  btn-outline-light">About Us</a>
      </div>
  <div class="about-bg"></div>
</div>



<div class="menu-section row mt-5 " id="menu-index">
  <h3 class="mt-5">Our Menu</h3>
  <% for(let foodItem of foodList){ %>
  <div class="card m-1 m-lg-3 m-md-3 mb-3 mb-lg-3 p-2 col-5 col-lg-2 col-md-3" >
    <img src="<%= foodItem.image.url %>" class="card-img-top"  style="height: 10rem ;" />
    <div class="card-body py-1">
      <h5 class="card-title"><%= foodItem.title %></h5>
      <p class="card-text">
        <p>&#8377;<%= foodItem.price %></p>
        </p>
    </div>
    
       <button  onclick="addToCart('<%= foodItem._id %>')"  class="btn btn-danger mx-3 add-cart">Add <i class="fa-solid fa-cart-shopping"></i></button>
       </div>
  <% } %>
  <a id="cart-message"  href="/cart" class="btn btn-success p-2 px-3">
   </a>
</div>

