<script>
async function addToCart(id) {
  const res = await fetch(`/cart/add/${id}`, {
    method: "POST",
  });
  const data = await res.json();
  if (data.success) {
    alert("Item added to cart!");
    // optionally update cart count on page here
  }
}
</script>